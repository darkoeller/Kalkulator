<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="ObracunPlace.UcOvrha"
             mc:Ignorable="d"
             d:DesignHeight="720"
             d:DesignWidth="550"
             Focusable="True">
    <UserControl.Resources>
        <Style x:Key="RadMargin" TargetType="RadioButton" >
            <Setter Property="Margin" Value="5" />
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" Width="550">
        <TextBlock HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,10"
                   TextWrapping="Wrap"
                   FontFamily="Comic Sans MS"
                   FontSize="14"
                   TextDecorations="Underline">
            IZRAČUNAJTE IZNOSE ZA UPLATU NA ZAŠTIĆENI RAČUN
        </TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel>
                <RadioButton Style="{StaticResource RadMargin}" GroupName="Ovrha" x:Name="RbClanak" IsChecked="True" Checked="RbClanak_Checked">Ovrha po čl. 173</RadioButton>
                <RadioButton Style="{StaticResource RadMargin}" GroupName="Ovrha" x:Name="RbUzdrzavanje" Checked="RbUzdrzavanje_Checked">Ovrha radi tražbine po osnovi zakonskog uzdržavanja.</RadioButton>
                <RadioButton Style="{StaticResource RadMargin}" GroupName="Ovrha" x:Name="RbUzdrzavanjeDjeteta" Checked="RbUzdrzavanjeDjeteta_Checked">Ovrha radi naplate tražbine za uzdržavanje djeteta.</RadioButton>
            </StackPanel>
            <GroupBox Header="Ovdje upišite neto iznos plaće"
                          HorizontalAlignment="Center"
                          Margin="0"
                          Background="#FFEEF8FB">
                <TextBox Language="hr"
                             VerticalContentAlignment="Center"
                             x:Name="TextBoxNeto"
                             HorizontalAlignment="Center"
                             Width="100"
                             Height="26"
                             HorizontalContentAlignment="Center" />
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <StackPanel 
                Orientation="Vertical"
                HorizontalAlignment="Center">
                <TextBlock Margin="0,15,0,0">
                    <Run Text="Iznos koji ostaje za isplatu :" />
                </TextBlock>
                <TextBox x:Name="TxtNetoOstaje"
                         IsReadOnly="True"
                         Margin="10,10,10,0"
                         Width="100"
                         Height="26"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         IsEnabled="False"
                         Language="hr"
                         Focusable="False" />
            </StackPanel>
            <StackPanel Margin="20,0,0,0"
                Orientation="Vertical"
                HorizontalAlignment="Center">
                <TextBlock Margin="0,15,0,0">
                    <Run Text="Iznos koji će se ovršiti :" />
                </TextBlock>
                <TextBox x:Name="TxtNetoOvrha"
                         IsReadOnly="True"
                         Margin="10,10,10,0"
                         Width="100"
                         Height="26"
                         Foreground="DarkRed"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         IsEnabled="False"
                         Language="hr"
                         Focusable="False" />
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="40"
                        x:Name="BtnCisti"
                        Width="100"
                        Margin="10,20,20,10"
                        ToolTip="Očistite kontrole na 0,00"
                        IsCancel="True"
                        Click="BtnCisti_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/cleaning.png"
                               Stretch="None" />
                    <TextBlock Text="OČISTI"
                                   VerticalAlignment="Center"
                                   Margin="3"
                                   FontWeight="Normal"
                                   FontFamily="Roboto Light" />
                </StackPanel>
            </Button>
            <Button Height="40"
                    x:Name="IzracunajNeto"
                    ToolTip="Izračunajte ovrhu"
                    IsDefault="True"
                    Click="IzracunajNeto_Click"
                    Margin="35,20,0,10"
                    Width="100">
                <StackPanel Orientation="Horizontal">
                    <Image Stretch="None"
                           Source="Resources/Calculator.png" />
                    <TextBlock Text="IZRAČUNAJ"
                               VerticalAlignment="Center"
                               Margin="3"
                               FontWeight="Normal"
                               FontFamily="Roboto Light" />
                </StackPanel>
            </Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center"
                   Margin="10">
            'Enter' na tipkovinici pokreće izračun, 'Esc' čisti tekst iz kontrola.
        </TextBlock>
        <TextBlock HorizontalAlignment="Left"
                   Margin="10,10,0,0" TextWrapping="Wrap">
            Prosječna mjesečna neto plaća u RH je 5.960,00 kune. Ovaj iznos je relevantan za provedbu ovrhe na plaći u 2018.godini.
        </TextBlock>
        <TextBlock HorizontalAlignment="Left"
                   Margin="10,3,10,0" TextWrapping="Wrap">
            Visina minimalne plaće utvrđena je u bruto iznosu os 3.439,80 kune.
        </TextBlock>
        <TextBlock Margin="10,3,10,0" TextWrapping="Wrap">Ako se ovrha se provodi na plaću koja je viša od 5297,77 kn neto, od ovrhe se izuzima 2/3 prosječne plaće odnosno 3973,33 kn.</TextBlock>
        <TextBlock Margin="10,3,10,0">Ako je plaća manja ili jednaka od 5297,77, tada se smije ovršiti samo 1/4 neto plaće.</TextBlock>
        <TextBlock Text="IZRAČUNAJTE RAZLIKU IZMEĐU DVA DATUMA"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Width="400"
                   FontFamily="Comic Sans MS"
                   FontSize="14"
                   TextDecorations="Underline"
                   Margin="0,25,0,0" />
        <StackPanel Orientation="Horizontal" Background="#FFF2FFF9" Margin="0,20,0,0" Width="250"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="30,0,0,0">
                <TextBlock HorizontalAlignment="Right" Margin="0,6,0,0" Text="Godina :" />
                <TextBlock HorizontalAlignment="Right" Margin="0,8,0,0" Text="Mjeseci :" />
                <TextBlock HorizontalAlignment="Right" Margin="0,10,0,0" Text="Dana :" />
                <TextBlock HorizontalAlignment="Right" Text="Sveukupno dana:" Margin="0,13,0,0" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0" Background="#FFF3FAFA" Width="55">
                <Label x:Name="LblGodine" Foreground="Black" HorizontalContentAlignment="Right" Margin="0,0,5,0" />
                <Label x:Name="LblMjeseci" Foreground="Black" HorizontalContentAlignment="Right" Margin="0,0,5,0" />
                <Label x:Name="LblDani" Foreground="Black" HorizontalContentAlignment="Right" Margin="0,0,5,0" />
                <Label x:Name="LblUkupnoDana" Foreground="Red" HorizontalContentAlignment="Right" Margin="0,0,5,0" />
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <DatePicker x:Name="PocetniDt" Width="110" Margin="10" HorizontalContentAlignment="Center"
                        ToolTip="Odaberite početni datum." SelectedDateChanged="PocetniDt_SelectedDateChanged" />
            <DatePicker x:Name="ZavrsniDt" Width="110" Margin="10" HorizontalContentAlignment="Center"
                        ToolTip="Odaberite završni datum." SelectedDateChanged="ZavrsniDt_SelectedDateChanged" />
        </StackPanel>
        <TextBlock Margin="15,5,15,25">U datumare možete upisivati datume tipkovnicom ili koristiti pomoćnike za odabir.</TextBlock>
    </StackPanel>
</UserControl>