<UserControl x:Class="ObracunPlace.TecajEura"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ObracunPlace"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="86*" />
      <RowDefinition Height="72*" />
      <RowDefinition Height="143*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="378*" />
      <ColumnDefinition Width="221*" />
    </Grid.ColumnDefinitions>
    <WrapPanel
               Orientation="Horizontal"
               Grid.Row="1"
               Grid.RowSpan="2">
 
        <TextBlock VerticalAlignment="Center" Text=" Na današni dan:  "/>
        <TextBlock VerticalAlignment="Center" Margin="5,0" x:Name="TxtDatum"
                 FontWeight="Bold" />
      <TextBlock VerticalAlignment="Center" Text=" srednji tečaj eura u "/>
      <TextBlock x:Name="TxtNazivBanke"
                 VerticalAlignment="Center" Text="" />
      <Label x:Name="LblTecaj"
               Margin="10,0"
               Content=""
             FontWeight="Bold"
             Foreground="Red" />
      <TextBlock VerticalAlignment="Center" Text=" kuna." />
      
    </WrapPanel>
    <TextBox Grid.Row="2" Height="23"
               TextWrapping="Wrap"
               Text="TextBox"
               Width="120" />
    <ComboBox x:Name="CmbBanke"
              Grid.Row="1"
              Grid.Column="1"
              HorizontalAlignment="Left"
              Margin="0"
              VerticalAlignment="Top"
              Width="150"
              Height="26"
              SelectionChanged="CmbBanke_SelectionChanged">
      <ComboBoxItem Content="Banka nije odabrana" />
      <ComboBoxItem Content="Tečaj HNB-a" />
      <ComboBoxItem Content="Tečaj PBZ-a" />
    </ComboBox>
    <Button x:Name="BtnIzracun"
            Grid.Row="2" 
            Grid.Column="1"
            Width="100"
            Height="35"
            Click="BtnIzracun_Click"
            Margin="0"
            ToolTip="Izračunajte tečaj eura."
            IsDefault="True">
      <StackPanel Orientation="Horizontal">
        <Image Stretch="None"
               Source="Resources/Calculator.png" />
        <TextBlock Text="IZRAČUNAJ"
                   VerticalAlignment="Center"
                   Margin="3"
                   FontFamily="Roboto-Light"
                   FontWeight="Normal" />
      </StackPanel>
    </Button>
  </Grid>
</UserControl>
