<controls:MetroWindow x:Class="ObracunPlace.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="2"
                      xmlns:local="clr-namespace:ObracunPlace"
                      xmlns:controlzex="urn:controlzex"
                      mc:Ignorable="d"
                      Title="Kalkulator plaće v. 2018 : neto / bruto"
                      Height="835"
                      Width="860"
                      WindowStartupLocation="CenterScreen"
                      Loaded="MainWindow_OnLoaded"
                      Icon="Resources/11438.ico"
                      ResizeMode="CanResizeWithGrip"
                      ShowInTaskbar="True"
                      WindowStyle="SingleBorderWindow"
                      FontFamily="Roboto Light">
    <Window.Resources>
        <Style x:Key="UvucenText"
               TargetType="TextBlock">
            <Setter Property="Padding"
                    Value="10,2,2,2" />
        </Style>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid x:Name="CjelaMreza"
              Height="800"
              Width="800">
            <controls:MetroAnimatedTabControl x:Name="TabKontrola"
                                              controls:ControlsHelper.HeaderFontSize="12"
                                              controls:ControlsHelper.ContentCharacterCasing="Lower"
                                              controls:TabControlHelper.Underlined="SelectedTabItem">
                <TabItem x:Name="IzracunTabItem"
                         Header=" bruto/neto | "
                         controls:ControlsHelper.HeaderFontSize="14">
                    <DockPanel x:Name="DckPanel"
                               Margin="8,10,8,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               MinWidth="770"
                               Height="750">
                        <TextBlock DockPanel.Dock="Top"
                                   TextAlignment="Center"
                                   Margin="0,0,0,5"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   TextDecorations="Underline">
                            <Run Text="VAŠA BRUTO ILI NETO PLAĆA"
                                 FontFamily="Comic Sans MS"
                                 FontSize="12" />
                        </TextBlock>
                        <TextBox x:Name="NaslovniText"
                                 DockPanel.Dock="Top"
                                 Margin="5,2,5,5"
                                 controls:TextBoxHelper.Watermark="Ovdje unesite tekst koji će se pojaviti na ispisu, npr. 'moja' plaća za rujan 2017. godine ili sl."
                                 controls:TextBoxHelper.IsWaitingForData="True"
                                 controls:TextBoxHelper.ClearTextButton="True"
                                 FontFamily="Roboto Light" />
                        <Border DockPanel.Dock="Top"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                BorderThickness="3"
                                Margin="3,3,5,0">
                            <Grid Background="#FFEEF8FB"
                                  Height="85"
                                  Width="770">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Column="0" Margin="3,0,3,0" Width="120">
                                    <RadioButton GroupName="BrutoBrutto"
                                                 x:Name="RbBruto"
                                                 Content="Iz bruta u neto"
                                                 HorizontalAlignment="Center"
                                                 Margin="2,15,2,5"
                                                 ToolTip="Označite ako želite izračunati neto plaću, iz bruta u neto"
                                                 Checked="RbBruto_Checked"
                                                 FontFamily="Roboto Light" />
                                    <RadioButton GroupName="BrutoBrutto"
                                                 x:Name="RbNeto"
                                                 Content="Iz neta u bruto"
                                                 HorizontalAlignment="Center"
                                                 Margin="2,5"
                                                 ToolTip="Označite ako želite izračunati bruto plaću na osnovu željenog neto iznosa."
                                                 Checked="RbNeto_Checked"
                                                 FontFamily="Roboto Light" />
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Width="165">
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="7,0,5,0"
                                               Text=" Faktor porezne olakšice"
                                               MaxWidth="80" />
                                    <controls:NumericUpDown Interval="0.1"
                                                            x:Name="OlaksicaUpDown"
                                                            Value="1"
                                                            Width="90"
                                                            Height="30"
                                                            Minimum="1.00"
                                                            Maximum="10"
                                                            Margin="0,0,7,0"
                                                            Culture="hr"
                                                            TrackMouseWheelWhenMouseOver="True"
                                                            ToolTipService.ShowDuration="5000">
                                        <controls:NumericUpDown.ToolTip>
                                            <ToolTip controlzex:ToolTipAssist.AutoMove="True">
                                                <ToolTip.Template>
                                                    <ControlTemplate>
                                                        <Grid>
                                                            <Border Background="DeepSkyBlue"
                                                                    BorderBrush="PapayaWhip"
                                                                    BorderThickness="1"
                                                                    Opacity="0.8"
                                                                    CornerRadius="3"
                                                                    SnapsToDevicePixels="True" />
                                                            <TextBlock Margin="5"
                                                                       MaxWidth="250"
                                                                       TextWrapping="Wrap"
                                                                       Foreground="WhiteSmoke"
                                                                       FontSize="10"
                                                                       Text="Ako u obitelji nemate nikog na olakšici, vaš porezni faktor=1, nakon toga pribrojite: za 1. dijete=0,7; za 2.dijete=1; za 3.dijete=1,4; osobna invalidnost = 0,4"
                                                                       TextOptions.TextFormattingMode="Display"
                                                                       TextOptions.TextRenderingMode="ClearType" />
                                                        </Grid>
                                                    </ControlTemplate>
                                                </ToolTip.Template>
                                            </ToolTip>
                                        </controls:NumericUpDown.ToolTip>
                                    </controls:NumericUpDown>
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            Width="200">
                                    <TextBlock TextWrapping="Wrap"
                                               Margin="5,0,5,0"
                                               Text="Iznos prireza u % :"
                                               ToolTip="Gradski ili općinski: Kutina = 12, Lipovljani = 6"
                                               VerticalAlignment="Center" />
                                    <ComboBox x:Name="CmbPrirez" 
                                              Width="60"
                                              Height="30"
                                              Margin="10,0"
                                              IsReadOnly="True" 
                                              SelectionChanged="CmbPrirez_SelectionChanged"
                                              HorizontalContentAlignment="Center"
                                              ToolTipService.ShowDuration="4000">
                                        <ComboBox.ToolTip>
                                        <ToolTip controlzex:ToolTipAssist.AutoMove="True">
                                            <ToolTip.Template>
                                                <ControlTemplate>
                                                    <Grid>
                                                        <Border Background="DeepSkyBlue"
                                                                BorderBrush="PapayaWhip"
                                                                BorderThickness="1"
                                                                Opacity="0.8"
                                                                CornerRadius="3"
                                                                SnapsToDevicePixels="True" />
                                                        <TextBlock Margin="5"
                                                                   MaxWidth="250"
                                                                   TextWrapping="Wrap"
                                                                   Foreground="WhiteSmoke"
                                                                   FontSize="10"
                                                                   Text="Prirez u općinama i gradovima: Kutina=12%; Lipovljani, Popovača=6%; Novska, Garešnica=10%"
                                                                   TextOptions.TextFormattingMode="Display"
                                                                   TextOptions.TextRenderingMode="ClearType" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </ToolTip.Template>
                                        </ToolTip>
                                        </ComboBox.ToolTip>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="3"
                                            VerticalAlignment="Center"
                                            Width="145">
                                    <RadioButton GroupName="StupOsig"
                                                 IsChecked="True"
                                                 x:Name="Rb1I2Stup"
                                                 Content="1. i 2.stup osiguranja"
                                                 Margin="5,0,5,10"
                                                 FontFamily="Roboto Light" />
                                    <RadioButton GroupName="StupOsig"
                                                 x:Name="Rb1Stup"
                                                 Content="samo 1. stup"
                                                 Margin="5,0,0,0"
                                                 ToolTip="Odaberite ako niste u 2.stupu, vaš doprinos je 20%"
                                                 FontFamily="Roboto Light" />
                                </StackPanel>
                                <StackPanel Grid.Column="4"
                                            VerticalAlignment="Center"
                                            Margin="0"
                                            Width="150">
                                    <TextBlock TextWrapping="Wrap"
                                               Width="110"
                                               Text="Upišite bruto iznos :"
                                               HorizontalAlignment="Center" />
                                    <TextBox x:Name="TxtBruto"
                                             Width="100"
                                             Height="30"
                                             Margin="0,7,0,0"
                                             HorizontalAlignment="Center"
                                             VerticalContentAlignment="Center"
                                             BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"
                                             Background="#FFFBFAE9"
                                             TextAlignment="Right"
                                             Foreground="OrangeRed"
                                             ToolTip="Ovdje unesite bruto, obavezno koristite zarez za decimalni broj"
                                             FontFamily="Roboto" />
                                </StackPanel>
                                <GridSplitter Grid.Column="0"
                                              Width="2"
                                              Background="{DynamicResource AccentColorBrush}" />
                                <GridSplitter Grid.Column="1"
                                              Width="2"
                                              Background="{DynamicResource AccentColorBrush}" />
                                <GridSplitter Grid.Column="2"
                                              Width="2"
                                              Background="{DynamicResource AccentColorBrush}" />
                                <GridSplitter Grid.Column="3"
                                              Width="2"
                                              Background="{DynamicResource AccentColorBrush}" />
                                <GridSplitter Grid.Column="4"
                                              Width="2"
                                              Background="{DynamicResource AccentColorBrush}" />
                            </Grid>
                        </Border>
                        <StackPanel x:Name="StckBottom"
                                    DockPanel.Dock="Bottom"
                                    MinHeight="50"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Margin="50,10,0,0"
                                    MinWidth="250">
                            <Button x:Name="BtnOcisti"
                                    Width="100"
                                    Click="BtnOcisti_Clic"
                                    ToolTip="Očistite kontrole na 0,00"
                                    IsCancel="True"
                                    FontFamily="Roboto">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Resources/cleaning.png"
                                           Stretch="None" />
                                    <TextBlock Text="OČISTI"
                                               VerticalAlignment="Center"
                                               Margin="3"
                                               FontFamily="Roboto Light" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="Ispis"
                                    Width="110"
                                    Margin="60,0,0,0"
                                    Click="Ispis_Click"
                                    ToolTip="Ispisuje  iznose u .pdf">
                                <StackPanel Orientation="Horizontal">
                                    <Image Stretch="None"
                                           Source="Resources/filequickprint.png" />
                                    <TextBlock Text="ISPIŠI IZRAČUN"
                                               VerticalAlignment="Center"
                                               Margin="2"
                                               FontFamily="Roboto-Light"
                                               FontWeight="Normal" />
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnIzracun"
                                    Width="100"
                                    Click="BtnIzracun_Click"
                                    Margin="60,0,0,0"
                                    ToolTip="Izračunajte neto ili bruto"
                                    IsDefault="True">
                                <StackPanel Orientation="Horizontal">
                                    <Image Stretch="None"
                                           Source="Resources/Calculator.png" />
                                    <TextBlock Text="IZRAČUNAJ"
                                               VerticalAlignment="Center"
                                               Margin="3"
                                               FontFamily="Roboto-Light"
                                               FontWeight="Normal" />
                                </StackPanel>
                            </Button>
                            <TextBlock Text="Aplikaciju izradio: Darko Eller"
                                       Margin="20,20,0,0"
                                       FontSize="10.667"
                                       VerticalAlignment="Bottom"
                                       FontFamily="Roboto-Italic"
                                       FontStyle="Italic"
                                       IsEnabled="False" />
                        </StackPanel>
                        <GroupBox Header="Opisi stavki"
                                  Height="520">
                            <StackPanel MinWidth="520"
                                        Margin="0,10,0,0">
                                <TextBlock TextWrapping="Wrap"
                                           Text="OSNOVICA ZA UTVRĐIVANJE DOPRINOSA PREMA OPOREZIVIM NAKNADAMA"
                                           Padding="2" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           TextWrapping="Wrap"
                                           Text="1. doprinos za mirovinsko osiguranje na temelju generacijske solidarnosti - 15% :"
                                           Margin="0,6,0,0" />
                                <TextBlock TextWrapping="Wrap"
                                           Style="{StaticResource UvucenText}"
                                           Text="2. doprinos za mirovinsko osiguranje na temelju individualno kapitalizirane štednje - 5% :"
                                           Margin="0,6,0,0" />
                                <TextBlock TextWrapping="Wrap"
                                           Style="{StaticResource UvucenText}"
                                           Text="Doprinosi iz plaće ukupno ili samo 1. stup doprinosa - 20% :"
                                           Margin="0,6,0,0" />
                                <TextBlock Text="DOHODAK (bruto - doprinosi iz plaće) :"
                                           Margin="0,4,0,0" />
                                <TextBlock Text="NEOPOREZIVI ODBITAK :"
                                           Margin="0,8,0,0" />
                                <TextBlock Text="POREZNA OSNOVICA :"
                                           Margin="0,10,0,0" />
                                <TextBlock Text="POREZ + PRIREZ, SVEUKUPNO:"
                                           Margin="0,10,0,0" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           Text="1. porez po stopi - 24% :"
                                           Margin="0,7,0,0" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           Text="2. porez po stopi - 36% :"
                                           Margin="0,5,0,0" />
                                <TextBlock Text="IZNOS PRIREZA :"
                                           Margin="0,8,0,0" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           Text="NETO PLAĆA  :-)"
                                           Margin="0,5,0,0"
                                           FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal"
                                            Margin="5,10,5,0"
                                            Background="#FFF3FAFA">
                                    <TextBlock Margin="5"
                                               HorizontalAlignment="Left">
                                        Ovdje odaberite relaciju putovanja za naknadu prijevoza :
                                    </TextBlock>
                                    <ComboBox x:Name="CmbPrijevoz"
                                              Width="240"
                                              Margin="5,0,0,0"
                                              HorizontalAlignment="Right"
                                              SelectionChanged="CmbPrijevoz_SelectionChanged"
                                              IsReadOnly="True"
                                              HorizontalContentAlignment="Center" />
                                </StackPanel>
                                <Border BorderThickness="0,0,0,1"
                                        BorderBrush="Black">
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Style="{StaticResource UvucenText}"
                                                   VerticalAlignment="Center">
                                            Upišite iznos svojih odbitaka (sindikat, krediti, dopunsko, itd.) :
                                        </TextBlock>
                                        <controls:NumericUpDown x:Name="TxtBoxOdbici"
                                                                Margin="121,2,0,2"
                                                                Width="100"
                                                                HorizontalContentAlignment="Right"
                                                                Value="0.00"
                                                                Minimum="0.00"
                                                                Maximum="5000.00"
                                                                Interval="0.01"
                                                                Culture="hr-HR"
                                                                TrackMouseWheelWhenMouseOver="True"
                                                                TextAlignment="Right"
                                                                controls:TextBoxHelper.UseFloatingWatermark="True" />
                                    </StackPanel>
                                </Border>
                                <TextBlock Text="DOPRINOSI NA PLAĆU :"
                                           Margin="0,2,0,0" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           Text="1. doprinos za zdravstveno - 15% :"
                                           Margin="0,5,0,0" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           Text="2. doprinos za zaštitu na radu - 0.5% :"
                                           Margin="0,5,0,0" />
                                <TextBlock Style="{StaticResource UvucenText}"
                                           Text="3. doprinos za zapošljavanje - 1.7% :"
                                           Margin="0,5,0,0" />
                                <TextBlock Text="DOPRINOSI NA PLAĆU UKUPNO :"
                                           Margin="0,8,0,0" />
                                <TextBlock Text="UKUPAN TROŠAK PLAĆE ZA POSLODAVCA (bruto plaća + doprinosi na plaću):"
                                           Margin="0,5,0,0"
                                           FontWeight="Bold" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Iznosi u kunama"
                                  Height="520">
                            <StackPanel x:Name="StPanel2"
                                        MinWidth="205"
                                        Margin="0"
                                        Background="#FFF3FAFA"
                                        HorizontalAlignment="Right">
                                <StackPanel.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right" />
                                    </Style>
                                </StackPanel.Resources>
                                <Label x:Name="LblBruto"
                                       ToolTip="Upisani bruto" />
                                <Label x:Name="Lbl1Stup"
                                       ToolTip="Doprinos iz plaće 1.stup" />
                                <Label x:Name="Lbl2Stup"
                                       ToolTip="Doprinos iz plaće 2.stup" />
                                <Label x:Name="LblDopUkupno"
                                       ToolTip="Ukupni doprinosi, samo 1.stup" />
                                <Label x:Name="LblDohodak"
                                       ToolTip="Dohodak nakon oduzetih doprinosa" />
                                <Label x:Name="LblOdbitak"
                                       ToolTip="Primanja koja se ne oporezuju" />
                                <Label x:Name="LblPorOsnovica"
                                       ToolTip="Osnovica na koju će se primjeniti porezi" />
                                <Label x:Name="LblPorezUkupno"
                                       ToolTip="Suma svih poreza i prireza" />
                                <Label x:Name="LblPorez25"
                                       ToolTip="Porez po stopi 24%" />
                                <Label x:Name="LblPorez40"
                                       ToolTip="Porez po stopi 36%" />
                                <Label x:Name="LblPrirez"
                                       ToolTip="Prirez" />
                                <TextBox x:Name="TxtNeto"
                                         Height ="30"
                                         Width="100"
                                         HorizontalAlignment="Right"
                                         VerticalContentAlignment="Center"
                                         Background="#FFFBFAE9"
                                         BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"
                                         Margin="0,0,5,0"
                                         TextAlignment="Right"
                                         Foreground="OrangeRed"
                                         FontFamily="Roboto"
                                         ToolTip="Brutto plaća, kod upisa koristite zarez"
                                         FontWeight="Bold" />
                                <Label x:Name="LblPrijevoz"
                                       Margin="0,5,0,4"
                                       ToolTip="Brutto + naknada za prijevoz"
                                       Background="White" />
                                <Label x:Name="LblOdbici"
                                       ToolTip="Brutto plaća - vaši ukupni odbici" />
                                <Border Height="1"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="Black"
                                        Background="White" />
                                <Label x:Name="LblZdravstveno"
                                       ToolTip="Doprinos na plaću za zdravstveno"
                                       Margin="0,5,0,0" />
                                <Label x:Name="LblZnr"
                                       ToolTip="Doprinos na plaću za ZNR" />
                                <Label x:Name="LblZaposljavanje"
                                       ToolTip="Doprinos za zapošljavanje" />
                                <Label x:Name="LblDoprinosiUkupno"
                                       ToolTip="Ukupan iznos doprinosa na plaću" />
                                <Label x:Name="LblTrosakPlace"
                                       ToolTip="Ukupan trošak plaće za poslodavca"
                                       FontWeight="Bold" />
                            </StackPanel>
                        </GroupBox>
                    </DockPanel>
                </TabItem>
                <TabItem x:Name="OstaliIzracun"
                         Header=" izračun bruto dohotka | "
                         controls:ControlsHelper.HeaderFontSize="14">
                    <DockPanel LastChildFill="False"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top">
                        <TextBlock DockPanel.Dock="Top"
                                   TextAlignment="Center"
                                   Margin="0,10,0,5"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   TextDecorations="Underline">
                            <Run
                                Text="RADITE LI U SMJENAMA, SATE RADA UPISUJTE IZ '*mpsr-a (preporučeno)' ILI IZ ŠIHTERICE "
                                FontFamily="Comic Sans MS"
                                FontSize="12" />
                        </TextBlock>
                        <Expander DockPanel.Dock="Top"
                                  Margin="0,10,0,0"
                                  Width="750"
                                  HorizontalAlignment="Center"
                                  Header="Kliknite ovdje, tu su sakrivene šifre u upotrebi za izračun plaće te njihove vrijednosti">
                            <local:MrezaKoeficijenata />
                        </Expander>
                        <TextBlock DockPanel.Dock="Top"
                                   Text=" Unesite potrebne parametre za izračun iznosa radnih sati kako je navedeno. Kod smjenskog rada odaberite smjenu ili vrstu rada koju trebate. Nakon toga klik na gumb 'IZRAČUNAJ'. Kada završite sa izračunom radnih sati, provjerite da su upisani ukupni mjesečni sati rada pa kliknite na 'DODAJ DODATAK NAPLAĆU ' i 'DODAJ MINULI RAD'."
                                   Margin="25,10,0,0"
                                   TextWrapping="Wrap"
                                   Width="720" />
                        <TextBlock Margin="25,0,0,0"
                                   TextWrapping="Wrap"
                                   DockPanel.Dock="Top"
                                   Width="720">
                            Unose iz liste možete micati pojedinačno tako da označite red, pa 'BRIŠI OZNAČENO' ili klik na 'OČISTI LISTU' koji miče sve stavke.
                        </TextBlock>
                        <local:UcObracun x:Name="UcObracun"
                                         Margin="0,10,0,0"
                                         Bruto="{Binding Text, ConverterCulture=hr-HR, ElementName=TxtBruto, Mode=OneWayToSource}"
                                         Focusable="True"
                                         DockPanel.Dock="Top" />
                        <StackPanel Orientation="Horizontal"
                                    DockPanel.Dock="Bottom">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="30,10,0,10"> * MPSR je skraćenica za mjesečni pregled sati radnika kojeg poenteri svakog mjeseca ispunjavaju.</TextBlock>
                                <TextBlock Margin="30,0,0,0"> Nakon što izračunate sve stavke ukupni bruto biti će vam prenešen na obradu u tab 'izračun bruto/neto'.</TextBlock>
                            </StackPanel>

                        </StackPanel>
                    </DockPanel>
                </TabItem>
                <TabItem x:Name="BeneficiraniTabItem"
                         Header=" izračun dopr. za benef. staž | "
                         controls:ControlsHelper.HeaderFontSize="14">
                    <local:BeneficiraniUc VerticalAlignment="Top"
                                          Margin="10,0,10,0" />
                </TabItem>
                <TabItem Header=" tečajevi banaka | "
                         x:Name="TabTecaj"
                         controls:ControlsHelper.HeaderFontSize="14">
                    <StackPanel Orientation="Vertical">
                        <local:TecajEura Margin="0,55,0,0"
                                         VerticalAlignment="Top"
                                         Width="550"
                                         Height="500" />
                    </StackPanel>
                </TabItem>
                <TabItem Header=" ovrha | "
                         x:Name="TabOvrha"
                         controls:ControlsHelper.HeaderFontSize="14">
                    <StackPanel Margin="0,20,0,30"
                                VerticalAlignment="Top">
                        <TextBlock HorizontalAlignment="Center"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   Width="510"
                                   FontFamily="Comic Sans MS"
                                   FontSize="14"
                                   Margin="155,0,115,0"
                                   TextDecorations="Underline">
                            IZRAČUNAJTE IZNOS KOJI TREBA UPLATITI NA ZAŠTIĆENI RAČUN
                        </TextBlock>
                        <local:UCOvrha Margin="0,30,0,0"
                                       Width="420"
                                       Height="400" />
                        <TextBlock HorizontalAlignment="Center"
                                   Margin="50,25,0,0">
                            'Enter' na tipkovinici pokreće izračun, 'Esc' čisti tekst iz kontrola.
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="50,10,0,0">
                            Prosječna mjesečna neto plaća u RH je 5.960,00 kune. Ovaj iznos je relevantan za provedbu ovrhe na plaći u 2018.godini.
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="50,10,0,0">
                            Visina minimalne plaće utvrđena je u bruto iznosu os 3.439,80 kune.
                        </TextBlock>
